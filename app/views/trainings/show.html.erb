<%- model_class = Training -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @training.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:semester) %>:</strong></dt>
  <dd><%= @training.semester %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructor_id) %>:</strong></dt>
  <dd><%= @training.instructor.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:career_id) %>:</strong></dt>
  <dd><%= @training.career.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trainings_path, :class => 'btn'  %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_training_path(@training), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              training_path(@training),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
