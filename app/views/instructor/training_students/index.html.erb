<%- model_class = TrainingStudent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:student_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @training_students.each do |training_student| %>
      <tr>
        <td><%= link_to training_student.id, instructor_training_training_student_path(@training, training_student) %></td>
        <td><%= training_student.student.name %></td>
        <td><%=l training_student.created_at, format: :long %></td>
        <td>
          <%= link_to t('.contract'), instructor_contract_path(training_student.contract) %>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_instructor_training_student_path(training_student), :class => 'btn btn-mini' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      instructor_training_student_path(training_student),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div><%= paginate @training_students %></div>

