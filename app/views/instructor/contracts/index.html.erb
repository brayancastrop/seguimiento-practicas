<%- model_class = Contract -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:contact_name) %></th>
      <th><%= model_class.human_attribute_name(:contact_phone) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:contract_type) %></th>
      <th><%= model_class.human_attribute_name(:training_student) %></th>
      <th><%= model_class.human_attribute_name(:company) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= link_to contract.id, instructor_contract_path(contract) %></td>
        <td><%= contract.contact_name %></td>
        <td><%= contract.contact_phone %></td>
        <td><%= contract.status %></td>
        <td><%= contract.contract_type.name %></td>
        <td><%= contract.training_student.name %></td>
        <td><%= contract.company_id %></td>
        <td><%=l contract.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_instructor_contract_path(contract), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      instructor_contract_path(contract),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div><%= paginate @contracts %></div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_instructor_contract_path,
            :class => 'btn btn-primary' %>
