<%- model_class = Meeting -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:scheduled_at) %>:</strong></dt>
  <dd><%= l @meeting.scheduled_at, format: :long %></dd>
  <dt><strong><%= model_class.human_attribute_name(:accomplished) %>:</strong></dt>
  <dd><%= t @meeting.accomplished?.to_s %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contract) %>:</strong></dt>
  <dd><%= @meeting.contract.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.observations'),
              instructor_meeting_observations_path(@meeting), :class => 'btn'  %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              instructor_contract_meetings_path(@contract), :class => 'btn'  %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_instructor_contract_meeting_path(@contract, @meeting), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              instructor_contract_meeting_path(@contract, @meeting),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
